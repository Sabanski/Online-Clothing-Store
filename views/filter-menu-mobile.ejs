<script>
    $(document).ready(function () {
        $('.icon-event-mobile').on('click', function () {
            $('.icon-event-mobile').not(this).find('.i').removeClass('fas fa-check fa-xs');
            $('icon-event-mobile').not(this).removeClass('filter-menu-active');
            $(this).find('i').toggleClass('fas fa-check fa-xs');
            $(this).toggleClass('filter-menu-active');
        });
        $(function () {
            $("#slider-range-mobile").slider({
                range: true,
                min: 250,
                max: 1000,
                values: [250, 1000],
                slide: function (event, ui) {
                    $("#amount-mobile").val("$" + ui.values[0] + " - $" + ui.values[1]);
                }
            });
            $("#amount-mobile").val("$" + $("#slider-range-mobile").slider("values", 0) +
                "- $" + $("#slider-range-mobile").slider("values", 1));
        });
        $('.size-active-mobile').on('click', function () {
            $('.size-active-mobile').not(this).removeClass('size-active-border');
            $(this).toggleClass('size-active-border');
        });
    });


</script>


